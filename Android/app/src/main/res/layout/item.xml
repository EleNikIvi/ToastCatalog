<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_toast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/spacing_4">

    <TextView
        android:id="@+id/tv_item_id"
        android:layout_width="@dimen/item_image_size"
        android:layout_height="@dimen/item_image_size"
        android:layout_marginHorizontal="@dimen/spacing_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="4" />

    <TextView
        android:id="@+id/tv_item_name"
        style="@style/PrimaryLabel.Body1.Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_item_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_min="@dimen/spacing_12"
        tools:text="Name" />

    <TextView
        android:id="@+id/tv_item_price"
        style="@style/SecondaryLabel.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_4"
        android:layout_marginTop="@dimen/spacing_1"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_date"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintStart_toEndOf="@+id/tv_item_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_name"
        app:layout_constraintWidth_min="@dimen/spacing_12"
        tools:text="3.99 EUR" />

    <TextView
        android:id="@+id/tv_item_date"
        style="@style/SecondaryLabel.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_price"
        app:layout_constraintEnd_toEndOf="@+id/tv_item_name"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintStart_toEndOf="@+id/tv_item_price"
        app:layout_constraintTop_toTopOf="@+id/tv_item_price"
        app:layout_constraintWidth_min="@dimen/spacing_12"
        tools:text="11/28/20 4:14 PM" />

</androidx.constraintlayout.widget.ConstraintLayout>
